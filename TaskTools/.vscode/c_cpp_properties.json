{
    "configurations": [
        {
            "name": "windows-msvc",
            "includePath": [
                "${default}",
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ]
        },
        // clang
        {
            "name": "windows-clang",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/Program Files/LLVM/include/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "clang-x64"
        },
        // mingw
        {
            "name": "windows-mingw",
            "includePath": [
                "${default}",
                "${workspaceFolder}/**",
                "C:/MinGW/include/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:MinGW/bin/gcc.exe",
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "gcc-x64"
        },

        // emscripten
        {
            "name": "windows-emscripten",
            "includePath": [
                "${EMSDK}/upstream/emscripten/system/include/**",
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cppStandard": "c++23",
            "cStandard": "c23",
            "compilerPath": "${EMSDK}/upstream/emscripten/emcc"
        }
    ],
    "version": 4
}
